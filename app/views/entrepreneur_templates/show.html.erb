<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Entrepreneur #<%= @entrepreneur.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/entrepreneurs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/entrepreneurs/<%= @entrepreneur.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit entrepreneur
        </a>
      </div>

      <div class="col">
        <a href="/delete_entrepreneur/<%= @entrepreneur.id %>" class="btn btn-block btn-outline-secondary">
          Delete entrepreneur
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @entrepreneur.name %>
      </dd>
      
      <dt>
        Image
      </dt>
      <dd>
         <img src="<%=@entrepreneur.image %>"  width="300">
      </dd>
      

      <dt>
        Bio
      </dt>
      <dd>
        <%= @entrepreneur.bio %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @entrepreneur.dob %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@entrepreneur.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@entrepreneur.updated_at) %> ago
      </dd>
      
    </dl>
  </div>
</div>

