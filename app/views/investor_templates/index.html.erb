<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All investors
    </h1>

    <a href="/investors/new" class="btn btn-block btn-outline-secondary">
      Add a new investor
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Image
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @investors.each do |investor| %>
      <tr>
        <td>
          <%= investor.id %>
        </td>

        <td>
          <%= investor.name %>
        </td>

        <td>
          <%= investor.dob %>
        </td>

        <td>
          <img src="<%= investor.image %>" width="80">
        </td>

        <td>
          <%= investor.bio %>
        </td>

        <td>
          <%= time_ago_in_words(investor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(investor.updated_at) %> ago
        </td>

        <td>
          <a href="/investors/<%= investor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
