<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      manager #<%= @manager.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/managers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/managers/<%= @manager.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit manager
        </a>
      </div>

      <div class="col">
        <a href="/delete_manager/<%= @manager.id %>" class="btn btn-block btn-outline-secondary">
          Delete manager
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @manager.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @manager.dob %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%=@manager.image %>"  width="300">
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @manager.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@manager.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@manager.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

