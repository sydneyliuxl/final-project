<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Fund #<%= @fund.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/funds" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/funds/<%= @fund.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit fund
        </a>
      </div>

      <div class="col">
        <a href="/delete_fund/<%= @fund.id %>" class="btn btn-block btn-outline-secondary">
          Delete fund
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @fund.name %>
      </dd>

      <dt>
        Duration
      </dt>
      <dd>
        <%= @fund.duration %>
      </dd>

      <dt>
        Field
      </dt>
      <dd>
        <%= @fund.field %>
      </dd>

      <dt>
        Stage
      </dt>
      <dd>
        <%= @fund.stage %>
      </dd>

      <dt>
        Manager
      </dt>
      <dd>
        <%= @fund.manager_id %>
      </dd>



      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@fund.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@fund.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

