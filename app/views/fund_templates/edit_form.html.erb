<h1>
  Edit fund #<%= @fund.id %>
</h1>

<hr>

<form action="/update_fund/<%= @fund.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @fund.name %>">
  </div>

  <div class="form-group">
    <label for="duration">
      Duration
    </label>

    <input type="text" id="duration" name="duration" class="form-control" value="<%= @fund.duration %>">
  </div>

  <div class="form-group">
    <label for="field">
      Field
    </label>

    <input type="text" id="field" name="field" class="form-control" value="<%= @fund.field %>">
  </div>

  <div class="form-group">
    <label for="stage">
      Stage
    </label>

    <input type="text" id="stage" name="stage" class="form-control" value="<%= @fund.stage %>">
  </div>

  <div class="form-group">
    <label for="manager_id">
      Manager
    </label>
    
    <%= select_tag("manager_id", options_from_collection_for_select(Manager.all, :id, :name, @fund.try(:manager_id)), :class => "form-control") %>
    or <a href="/managers/new">add a new manager</a> first 
    
  </div>



  <button class="btn btn-block btn-outline-secondary">
    Update fund
  </button>
</form>

<hr>

<a href="/funds">
  Go back
</a>
