<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All funds
    </h1>

    <a href="/funds/new" class="btn btn-block btn-outline-secondary">
      Add a new fund
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
          Scale
        </th>
        
        <th>
          Duration
        </th>

        <th>
          Field
        </th>

        <th>
          Stage
        </th>

        <th>
          Manager
        </th>


        <th>
        </th>
        
      </tr>

      <% @funds.each do |fund| %>
      <tr>

        <td>
          <%= fund.name %>
        </td>

        <td>
          $ <%= fund.investments.pluck(:amount).sum/1000000 %> million
        </td>


        <td>
          <%= fund.duration %>
        </td>

        <td>
          <%= fund.field %>
        </td>

        <td>
          <%= fund.stage %>
        </td>

        <td>
         <a href="/managers/<%= fund.manager_id %>">
          <%= fund.manager.name %>
         </a>            
         
        </td>


        <td>
          <a href="/funds/<%= fund.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
