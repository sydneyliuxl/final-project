<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Project #<%= @project.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/projects" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/projects/<%= @project.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit project
        </a>
      </div>

      <div class="col">
        <a href="/delete_project/<%= @project.id %>" class="btn btn-block btn-outline-secondary">
          Delete project
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @project.name %>
      </dd>

      <dt>
        Entrepreneur
      </dt>
      <dd>
        
        <%= @project.entrepreneur.name %>
      </dd>

      <dt>
        Industry
      </dt>
      <dd>
        <%= @project.industry %>
      </dd>

      <dt>
        Business
      </dt>
      <dd>
        <%= @project.business %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @project.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@project.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@project.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

