<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All projects
    </h1>

    <a href="/projects/new" class="btn btn-block btn-outline-secondary">
      Add a new project
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Entrepreneur
        </th>

        <th>
          Industry
        </th>

        <th>
          Business
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td>
          <%= project.id %>
        </td>

        <td>
          <%= project.name %>
        </td>

        <td>
          <%= project.entrepreneur.name %>
        </td>

        <td>
          <%= project.industry %>
        </td>

        <td>
          <%= project.business %>
        </td>

        <td>
          <%= project.location %>
        </td>

        <td>
          <%= time_ago_in_words(project.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
